/* pages/pinyin/pinyin.wxss */
.from_translate_box{
  border: #c0c0c0  solid 1rpx;
  width: auto;
  margin:20rpx;
  border-radius: 20rpx;
}

.tr {
  display: flex;
  width: 100%;
  justify-content: center;
  align-items: center;
  min-height: 120rpx;
  border-bottom: 1rpx solid #c0c0c0 ;
}

.td_name{
  flex: 1;
  text-align: center;
  font-size: small;
  border-right: 1rpx solid #000 ;
  font-weight: bold;
}
.td_value{
  flex: 3;
  font-size: small;
  text-align: center;
  padding: 10rpx;
}