/* pages/feedback/feedback.wxss */
page {
  background-color: white;
}

.fb_tips {
  display: flex;
  flex-wrap: wrap;
}

.fb_tips view {
  padding: 15rpx;
  text-align: center;
  margin: 10rpx 10rpx;
  border: 1rpx solid #c0c0c0;
  border-radius: 15rpx;
}

.fb_tip_selected {
  background: #95ec69;
}

.content_wrap,
.title,
.phone {
  width: 96%;
  background-color: #fff;
  border-radius: 10rpx;
  margin: 20rpx auto;
  box-shadow: 0px 0px 10px 2px rgb(0 0 0 / 8%);
}

.content {
  padding: 20rpx;
  margin: 0 auto;
  border-radius: 10rpx;
}

textarea {
  min-height: 300rpx;
  width: 100%;
}

input {
  margin-top: 30rpx;
  height: 100rpx;
  padding-left: 20rpx;
  background-color: #fff;
}

.button {
  color: white;
  border: none;
  width: 85%;
  padding: 10rpx 0rpx;
  margin: 40rpx auto;
  background: #2b85e4;
  border-radius: 40rpx;
  font-size: 30rpx;
}

.button_active {
  background: #5cadff;
}

.placeholder {
  color: #b6b6b6;
  font-size: 14px;
}