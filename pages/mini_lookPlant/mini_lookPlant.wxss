.box .image_box{
  width: auto;
  height: 400rpx;
  border: 1rpx solid #c0c0cc;
  display: flex;
  align-items: center;
  justify-content: center;
}

.box .image_box_selected {
  width: auto;
  height: 400rpx;
  border: 1rpx solid #c0c0cc;
  width: 400rpx;
  height: 400rpx;
}

.box .image_box image {
  width: 148rpx;
  height: 128rpx;
}

.box button {
  margin-top: 50rpx;
  margin-bottom: 50rpx;
}

.th{
  text-align: center;
}
.td{
  padding-left: 10rpx;
  padding-right: 10rpx;
}

.tr {
  display: flex;
  width: 100%;
  justify-content: center;
  align-items: center;
  min-height: 120rpx;
  border-bottom: 1rpx solid #c0c0c0;
}

.td_index{
  flex: 1;
  font-size: small;
}
.td_value{
  flex: 2;
  font-size: small;
  text-align: center;
}
.td_baike{
  flex: 3;
  font-size: small;
}
.td_baike image{
  width: 200rpx;
  height: 200rpx;
}